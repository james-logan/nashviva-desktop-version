div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') NashViva


    div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in menu' ng-class='{active: isActive(item.link)}')
          //- ng-class='{active: isActive(item.link)}'
          a(href='{{item.link}}' data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") {{item.title}}
      ul.nav.navbar-nav.navbar-right
        li
          a(href="/auth/facebook") Login with Facebook
        li
          a(href="https://icons8.com") Icons
